<h3 class="section_header">Comentarios en la convesación de 
    {%if type == 'book'%}
    {{element.title}}
    {%elseif type == 'author'%}
    {{element.name}}
    {%elseif type == 'list'%}
    {{element.name}}
    {%endif%}
</h3>

<ul id="comments-list-{{element.id}}">
    <li class="link_form">
    <div class="form-holder" style="display:none;"></div>
    <a href="#new-comment" onclick="event.preventDefault();" class="boton boton_inline boton_med boton_celeste js-abre-form-comentario no_activo">Nuevo comentario</a>
    </li>
</ul>

<div class="load-more-on-bordered">
    <a href="#" id="load-more-comments-{{element.id}}" class="load-comments boton boton_inline boton_med boton_celeste load-more">Más</a>
</div>

<script type="text/template" id="comment-form-{{element.id}}">
    <div class="add-resena">
        <h3>Escribe tu respuesta</h3>
        <form method="post" class="comment-form clearfix">
            <fieldset class="clearfix">
                <textarea id="content" name="content" placeholder="Tu comentario"></textarea>
                <input type="hidden" name="{{type}}" value="{{element.id}}"/>
                <button class="boton boton_med boton_verde boton_inline">Enviar comentario</button> 
            </fieldset>
            <div class="error-form" style="display: none;">Por favor, rellena todos los campos.</div>
            <div class="error-form errorlabels" style="display: none;"> 
            </div> 
        </form>
    </div>
</script>
