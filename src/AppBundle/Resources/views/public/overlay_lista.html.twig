<div class="overlay listas" id="overlay_add_to_list" style="display: none;">
	<div class="overlay_cont mensaje contenido_general">
		<div class="cerrar ion-close"></div>
	
		<div class="overlay_cont_inner">		
			<h3>Mis listas</h3>
		
			<form class="listas" method="post">
				
                <input type="checkbox" name="new-list" value="-1" id="new-list" style="display:none !important;">
                <label for="new-list">Nueva lista</label>
				<input type="text" id="nuevalista" name="nueva_lista_nombre" placeholder="Crear nueva lista" class="crear_nueva_lista">
                <input type="hidden" id="list-book-input" name="book" value=""/>
				<input type="submit" value="actualizar" onclick="event.preventDefault();lists.submit($(this).closest('form'));">	
			</form>
					
		</div>
	
	</div>

</div>

<script type="text/template" id="input-lista-template"> 
    <input type="checkbox" name="lista<%=id%>" value="<%=id%>" id="lista_<%=id%>" style="display:none !important;" class="list-input">
    <label for="lista_<%=id%>" class="list-input"><%=name%></label>
</script>

