{% extends 'AppBundle:public:common_base.html.twig' %}

{%block body%}
<div class="row_100 clearfix">
    <div class="row">
        <div class="col_content contenido_general">
		    
            <!-- ABRIR NUEVO mensajes LISTADO -->
            <div class="mensajes single conversacion" id="conversation-user-id" userid="{{ user.id }}">
            
                <h1>Mensajes con <a href="{{ url('user_profile', {'slug': user.slug }) }}">{{ user }}</a></h1>
    
                <span class="volver"><a href="{{url('conversation_index') }}" class="boton boton_min boton_inline boton_celeste"> Volver al listado</a></span>
                <ul id="message-list-{{ user.id }}">
                    {%if canMessage%}
                    <li class="link_form">
                    <div class="form-holder"></div>
                    <a href="" onclick="event.preventDefault();" class="boton boton_inline boton_med boton_celeste js-abre-form-mensaje no_activo">Nuevo mensaje</a>
                    </li>
                    {%endif%}
                    {% include 'AppBundle:message:conversationlist.html.twig' with {'messages':messages} %}
        
                </ul>

                <span class="more-messages">
                    <a href="#more-messages" id="js-more-messages-{{user.id}}" class="boton boton_min boton_inline boton_celeste">MÃ¡s</a>
                </span>

            </div>
            <!-- CERRAR NUEVO mensajes LISTADO -->
		    
        </div>
		
		<!-- ABRIR Sidebar, ignorar -->
		<div class="col_sidebar">
            {{include('AppBundle:user:user_sidebar.html.twig')}} 
        </div>        
        <!-- CERRAR Sidebar, ignorar -->
	
	</div>

</div>

<script type="text/template" id="comment-form">
    <div class="add-resena">
        <h3>Escribe tu mensaje</h3>
        <form method="post" class="comment-form clearfix">
            <fieldset class="clearfix">
                <textarea id="content" name="text" placeholder="Tu mensaje"></textarea>
                <input type="hidden" name="to" value="{{user.id}}"/>
                <button class="boton boton_med boton_verde boton_inline">Enviar mensaje</button> 
            </fieldset>
            <div class="error-form" style="display: none;">Por favor, rellena todos los campos.</div>
            <div class="error-form errorlabels" style="display: none;"> 
            </div> 
        </form>
    </div>
</script>

{%endblock%}
