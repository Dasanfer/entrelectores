<div class="box">
    <div class="box-header">
        <h3 class="box-title">{{ settings.title }}</h3>
    </div>

    <div class="bok-body">
        <canvas id="votos_canvas"></canvas>
        <a href="#" onclick="event.preventDefault();$('#votos_data_table').toggle(200)">Ver tabla</a>
        <table style="display:none;" id="votos_data_table" class="table table-hover">
            <tr><th>DÃ­a</th><th>votos</th></tr>
            {%for entry in data%}
                <tr><td>{{entry.day}}</td><td>{{entry.num}}</td></tr>
            {%endfor%}
        </table>
    </div>
</div>
<script type="text/javascript">
    Chart.defaults.global.responsive = true;
    var data = {
        labels: [{%for entry in data %}"{{entry.day}}",{%endfor%}],
        datasets: [
            {
                label: "Votos",
                fillColor: "rgba(220,220,220,0.5)",
                strokeColor: "rgba(220,220,220,0.8)",
                highlightFill: "rgba(220,220,220,0.75)",
                highlightStroke: "rgba(220,220,220,1)",
                data: [{%for entry in data %}{{entry.num}},{%endfor%}]
            }
        ]
    };
    var ctx = document.getElementById('votos_canvas').getContext('2d');
    new Chart(ctx).Line(data);
</script>
{% endblock %}

