{% form_theme form 'AppBundle:forms:el_theme.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" id="signup_form" class="fos_user_registration_register standard-form">
    <h2>Crear Cuenta</h2>
    <p>Registrarte es fácil y rápido. Rellena los siguiente campos y en un momento obtendrás una cuenta de Entrelectores para empezar a compartir tus lecturas con la comunidad.</p>
    <div class="register-section" id="basic-details-section">
        <h4>Detalles de la cuenta</h4>
        {{ form_widget(form) }}
        <input type="checkbox" id="acepto_condiciones" required="true">

        <label for="acepto_condiciones">
            Acepto los <a href="/terminos-y-condiciones/" class="home" target="_blank">términos y condiciones</a>
            y la <a href="/politica-de-privacidad/" class="home" target="_blank">Política de privacidad</a>
        </label>
    </div>
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
